            <p class="mb-0">Finish Date</p>
            <%= @payment_options[3].final_payment_date %>
          </div>
        </div>
      </div>
    </div>

    <div class="container p-3 shadow-sm mb-2 rounded debt-summary">
      <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel" data-bs-interval="50000">
